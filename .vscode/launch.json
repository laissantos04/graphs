{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug projeto",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/exe",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Habilita pretty-printing no GDB",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build_all"
    }
  ]
}
